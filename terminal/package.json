{
  "name": "@northbrook/terminal",
  "version": "0.2.0",
  "description": "Agent command center TUI for Northbrook",
  "packageManager": "bun@1.2.2",
  "type": "module",
  "bin": {
    "northbrook": "src/main.tsx"
  },
  "main": "src/main.tsx",
  "scripts": {
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "dev": "bun --watch src/main.tsx",
    "start": "bun src/main.tsx",
    "wizard": "bun wizard/main.tsx",
    "biome:check": "biome check .",
    "biome:fix": "biome check --write .",
    "ultracite:check": "ultracite check .",
    "ultracite:fix": "ultracite fix ."
  },
  "dependencies": {
    "@northbrook/broker-sdk-typescript": "file:../broker/sdk/typescript",
    "gray-matter": "^4.0.3",
    "ink": "^5.1.0",
    "ink-spinner": "^5.0.0",
    "ink-markdown": "^1.0.4",
    "ink-text-input": "^6.0.0",
    "react": "^18.3.1",
    "zustand": "^5.0.0",
    "chalk": "^5.4.1",
    "date-fns": "^4.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.18",
    "ink-testing-library": "^4.0.0",
    "typescript": "^5.7.3",
    "ultracite": "^5.1.2"
  },
  "engines": {
    "node": ">=20"
  }
}
